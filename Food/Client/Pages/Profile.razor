@page "/profile"
@using Microsoft.EntityFrameworkCore
@inject Blazored.LocalStorage.ISyncLocalStorageService localStorage
<h1>User Profile</h1>




            <RadzenCard class="m-3">
                <div class="d-flex flex-row">
                    <RadzenImage Path="https://images.pexels.com/photos/8294481/pexels-photo-8294481.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=750" Class="rounded-circle float-left mr-3" Style="width: 200px; height: 200px;" />
                    <div>
                        <div>Name</div>
                        <b>@(localStorage.GetItem<string>("name"))</b>
                        <div class="mt-3">Email</div>
                        <b>@(localStorage.GetItem<string>("email"))</b>
                    </div>
                </div>
            </RadzenCard>
            <RadzenCard class="m-3">
                <h3 class="h5">Delivery Information</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div>Country</div>
                        <b>Poland</b>
                        <div class="mt-3">City</div>
                        <b>@(localStorage.GetItem<string>("city"))</b>
                    </div>
                    <div class="col-md-4">
                        <div>Street</div>
                        <b>@(localStorage.GetItem<string>("street"))</b>
                        <div class="mt-3">Post Code</div>
                        <b>@(localStorage.GetItem<string>("postcode"))</b>
                    </div>
                    <div class="col-md-4">
                        <div>Phone Number</div>
                        <b>@(localStorage.GetItem<string>("phone"))</b>
                    </div>
                </div>
            </RadzenCard>


